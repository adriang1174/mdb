			<input name="recommend1_name" type="text" label="Nombre y Apellido #1" dbtable="answers" dbfield="recommend1_name" required="no" >
			</input>
			<input name="recommend1_country" type="text" label="País de residencia #1" dbtable="answers" dbfield="recommend1_country" required="no" >
