			</input>	
			<input name="pais" type="text" label="País de Residencia" dbtable="answers" dbfield="country" required="yes">
			</input>	
			<input name="phone" type="text" label="Teléfono (cód pais)+(cód ciudad)+(número local o celular)" dbtable="answers" dbfield="phone" required="yes" minlength="8">
			</input>	
			<input name="cel" type="check" label="" dbtable="answers" dbfield="q1" required="no">
